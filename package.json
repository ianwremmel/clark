{
  "name": "@ianwremmel/clark",
  "version": "0.0.0-development",
  "description": "Monorepo tools",
  "bin": {
    "clark": "bin/clark"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ianwremmel/clark.git"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "prebundle": "npm run build",
    "bundle": "pkg --out-path dist .",
    "clean": "rimraf dist lib",
    "commitmsg": "npm run --silent lint:commitmsg",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "npm run --silent lint:js && npm run --silent lint:ts && npm run --silent lint:changelog",
    "lint:changelog": "commitlint --from origin/master --to HEAD",
    "lint:commitmsg": "commitlint -e",
    "lint:eslint": "eslint --ignore --ignore-path .gitignore",
    "lint:js": "npm run --silent lint:eslint -- .",
    "lint:tslint": "tslint --project tsconfig.json",
    "lint:ts": "npm run --slient lint:tslint -- './src/**/*.ts'",
    "lint:staged": "lint-staged",
    "mocha-reporter-options": "[ -n \"${CI}\" ] && echo '--reporter xunit --reporter-options output=reports/junit/mocha.xml'",
    "precommit": "npm run --silent lint:staged",
    "presemantic-release": "npm run bundle",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "nyc --reporter=text mocha -r ts-node/register $(npm run --silent mocha-reporter-options) './src/**/*-spec.[jt]s' './test/*/spec/**/*.[jt]s'"
  },
  "engines": {
    "node": ">=8"
  },
  "keywords": [],
  "author": "Ian Remmel <1182361+ianwremmel@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-angular": "^6.1.3",
    "@ianwremmel/eslint-config-base": "^1.0.0",
    "@ianwremmel/eslint-config-standard": "^1.2.0",
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "@types/yargs": "^11.0.0",
    "@urbandoor/lint": "0.0.6",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "condition-circle": "^2.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-mocha": "^4.12.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.4",
    "nyc": "^11.6.0",
    "pkg": "^4.3.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.0.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.7.2"
  },
  "lint-staged": {
    "**/*.js": "npm run lint:eslint -- ",
    "**/*.ts": "tslint",
    "bin/**": "npm run lint:eslint -- "
  },
  "release": {
    "verifyConditions": "condition-circle"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "glob": "^7.1.2",
    "invariant": "^2.2.4",
    "yargs": "^11.0.0"
  },
  "pkg": {
    "assets": [
      "lib/**/*.d.ts"
    ],
    "scripts": [
      "bin/clark",
      "lib/**/*.js"
    ]
  }
}
