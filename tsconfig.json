{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./lib",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "pretty": true,
    "rootDirs": ["./src"],
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["./src/**/*"]
}
